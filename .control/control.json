{
  "agent": "codex",
  "policy": {
    "commit_every_change": true,
    "release_on_api_change": true,
    "conventional_commits": true,
    "semver": true
  },
  "resume": {
    "enabled": true,
    "on_fail": "resume",
    "on_interrupt": "resume",
    "on_context_loss": "resume"
  },
  "retry": {
    "max": 2,
    "backoff_ms": 1500
  },
  "lock": {
    "enabled": true,
    "ttl_ms": 600000
  }
}
