{
    "$schema":  "https://ng-packagr.github.io/ng-package.schema.json",
    "dest":  "dist",
    "lib":  {
                "entryFile":  "src/public-api.ts"
            },
    "assets":  [
                   {
                       "input":  "schematics",
                       "glob":  "collection.json",
                       "output":  "schematics"
                   },
                   {
                       "input":  "schematics/dist",
                       "glob":  "**/*",
                       "output":  "schematics/dist"
                   }
               ]
}
